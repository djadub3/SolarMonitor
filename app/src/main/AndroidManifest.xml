<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andy.SolarMonitor" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.andy.SolarMonitor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.andy.SolarMonitor.Bluetoothservice"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.example.andy.SolarMonitor.DayGraph"
            android:label="@string/title_activity_day_graph"
            android:parentActivityName="com.example.andy.SolarMonitor.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andy.SolarMonitor.MainActivity" />
        </activity>
    </application>

</manifest>
